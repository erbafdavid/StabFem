			  << real(AAA*FyA1) << " " << imag(AAA*FyA1) << endl
			  << Fx0 << endl 
			  << Fxeps2 << endl
			  << FxA20 << endl  
			  << " " << real(FxA22) << " " << imag(FxA22) << endl
