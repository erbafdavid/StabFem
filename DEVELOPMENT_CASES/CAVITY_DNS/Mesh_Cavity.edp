int n=4;// era 9
real xinlet=-1.2, xoutlet=2.5, yinf=0.5; // x dell'inlet, xoutlet, y superiore
//real x2m=-4.8,x2v=4.8,y2=0.7;
real profcavity=1.;
real largcavity=1.0;
real innoslip=-0.4,endnoslip=1.75;
real cutincav=-0.2;
real hcutin=0.15;
int ncavity=33,hh=11;  // 33 hh=11
int ns=3;


//int bcinlet=1,bcoutlet=3,bcnoslip=5,bcinfcondfirst=2,bcinfty=4;


//real str=0.25;//parametro stretching vicino i bordi(varia da 0 a 0.499999)
int jjk=10;

// dominio esterno
border inlet(t=0,1){ x=xinlet;y=yinf*(1-t);label=1;}
border latinfone(t=0,1){ x=xinlet+(innoslip-xinlet)*t;y=0;label=4;}
border latinfonenoslip(t=0,1){ x=innoslip*(1-t);y=0;label=21;}

//cavity
border leftcav(t=0,1){ x=0;y=cutincav*t;label=22;}
border leftcavtwo(t=0,1){ x=0;y=cutincav-(profcavity+cutincav)*t;label=22;}

border lowercav(t=0,1){ x=largcavity*t;y=-profcavity;label=23;}

border rightcav(t=0,1){ x=largcavity;y=-profcavity+(profcavity+cutincav)*t;label=24;}
border rightcavtwo(t=0,1){ x=largcavity;y=cutincav*(1-t);label=24;}


border latinftwonoslip(t=0,1){ x=largcavity+(endnoslip-largcavity)*t;y=0;label=25;}
//////
border a(t=0,1){ x=endnoslip;y=hcutin*t;label=239;}
border aa(t=0,1){ x=endnoslip-(endnoslip-innoslip)*t;y=hcutin;label=239;}
border aaa(t=0,1){ x=innoslip;y=hcutin*(1-t);label=239;}
border bbb(t=0,1){ x=largcavity*t;y=cutincav;label=239;}
/////
border latinftwo(t=0,1){ x=endnoslip+(xoutlet-endnoslip)*t;y=0;label=4;}
border outlet(t=0,1){ x=xoutlet;y=yinf*t;label=3;}
border latsup(t=0,1){ x=xoutlet-(xoutlet-xinlet)*t;y=yinf;label=4;}


