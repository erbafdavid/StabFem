macro ugraduTy(u,v) ((u#x*Dy(v#x)+u#y*Dy(v#y)))    //
macro innerproduct(u,v) ((u#x*v#x + u#y*v#y)) // EOM
macro prodgradfStrain(u,f,v) (v#x*(Dx(f)*(2.0*Dx(u#x)) +Dy(f)*(Dy(u#x)+Dx(u#y)) ) + v#y*( Dx(f)*(Dy(u#x)+Dx(u#y)) + Dy(f)*(2.0*Dy(u#y)) ) ) //EOM
