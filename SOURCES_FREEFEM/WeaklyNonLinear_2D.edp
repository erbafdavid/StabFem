if(Recheck>0)
{
XXMh [umx,umy,ump]; // mean flow
Re = Recheck;

{
	ofstream file(ffdatadir+"MeanFlow_guess.txt");
		umx[] = ubx[]+epsilonTT^2*uepsx[];
	[umx,umy,ump]=[umx,umy,ump]+AAA^2*epsilonTT^2*[real(u20x),real(u20y),real(u20p)];
	file << umx[]; 
	file << endl << endl << Re;
}; 
