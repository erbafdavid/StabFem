    return abs(1.+1./M)*(x>xinfv)*(alpha*(x-xinfv))+abs(1.-1./M)*(x<xinfm)*(alpha*(xinfm-x))+abs(1./M)*(abs(y)>yinf)*(alpha*(abs(y)-yinf));
